<resources>
    <style name="Theme.MarvelApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/c_black_light</item>
        <item name="android:statusBarColor">@color/c_black_dark</item>
        <item name="android:windowBackground">@color/c_white_light</item>
    </style>

    <style name="Theme.MarvelApp.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/c_black_dark</item>
        <item name="windowSplashScreenAnimatedIcon">@color/c_black_dark</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.MarvelApp</item>
    </style>
</resources>